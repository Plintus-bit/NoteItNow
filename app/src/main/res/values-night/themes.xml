<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteItNow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/very_light_grey</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/contrast_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_total_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">60dp</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActBtnStyle</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <!-- Верхняя панель -->
    <style name="Theme.NoteItNow.MainActivityActionBar">
        <item name="actionBarSize">80dp</item>
    </style>
</resources>