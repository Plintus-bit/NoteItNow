<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteItNow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/very_light_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/contrast_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">60dp</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActBtnStyle</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Верхняя панель -->
    <style name="Theme.NoteItNow.MainActivityActionBar">
        <item name="actionBarSize">80dp</item>
    </style>

    <style name="Theme.NoteItNow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteItNow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteItNow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>